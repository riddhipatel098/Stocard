<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/content_frame"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".stocard.fragements.LoginFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ImageView

        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/round_back"
        />

    <ImageView
        android:id="@+id/Vector_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_1"
        android:paddingTop="20dp"
        android:paddingLeft="7dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Sign_in"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:layout_below="@+id/Vector_1"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/L_Email"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColorHint="@color/gray"
        android:layout_below="@+id/login"
        android:hint="@string/enter_your_email"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text"
        android:textColor="@color/gray"
        android:paddingLeft="16dip"
        />
    <EditText
        android:id="@+id/L_Password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColorHint="@color/gray"
        android:layout_below="@+id/L_Email"
        android:hint="@string/enter_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text"
        android:textColor="@color/gray"
        android:paddingLeft="16dip"
        />

    <Button
        android:id="@+id/Sign_In"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/L_Password"
        android:layout_centerHorizontal="true"
        android:text="@string/Sign_in"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_corners"
        />
    <ImageView
        android:id="@+id/Vector_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/credit_card"
        />
    <TextView
        android:id="@+id/Create_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:layout_below="@+id/Sign_In"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/Forgot_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:layout_below="@+id/Create_Account"
        android:layout_marginTop="10dp"/>
  </RelativeLayout>
</FrameLayout>